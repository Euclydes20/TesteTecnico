@model TesteTecnico.Models.Personagem

@{
    ViewData["Title"] = "Deletar Personagem";
}

<h1>Deletar</h1>

<h3>Você tem Certeza que Deseja Deletar Este Personagem?</h3>
<div>
    <h4>Personagem</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.id).ToUpper()
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.personagem).ToUpper()
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.personagem)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.filme).ToUpper()
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.filme)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.cenario).ToUpper()
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.cenario)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar ao Início</a>
    </form>
</div>
